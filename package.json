{
  "name": "mcp-datetime",
  "version": "0.1.0",
  "description": "A TypeScript implementation of a simple MCP server that exposes datetime information to agentic systems and chat REPLs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-datetime": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && node --input-type=module -e \"import { chmod } from 'fs/promises'; await chmod('./dist/index.js', '755');\"",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "datetime",
    "timezone",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
